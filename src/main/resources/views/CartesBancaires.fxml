<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.DatePicker?>

<VBox spacing="10" style="-fx-padding: 20px;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="isi.java.gestion_bancaire.controllers.CarteBancaireController">
    <Label text="Gestion des Cartes Bancaires" style="-fx-font-size: 20px; -fx-text-fill: white;"/>


    <TableView fx:id="cartesTable">
        <columns>
            <TableColumn text="Numéro" fx:id="colNumero" />
            <TableColumn text="Type" fx:id="colType" />
            <TableColumn text="Date d'expiration" fx:id="colDateExpiration" />
            <TableColumn text="Solde" fx:id="colSolde" />
            <TableColumn text="Client" fx:id="colClient" />
        </columns>
    </TableView>

    <ComboBox fx:id="comboClients" promptText="Sélectionnez un client"/>

    <!-- Formulaire pour ajouter une carte bancaire -->
    <TextField fx:id="txtNumero" promptText="Numéro de la carte"/>
    <TextField fx:id="txtType" promptText="Type de carte (Visa, Mastercard...)"/>
    <DatePicker fx:id="dateExpiration" promptText="Date d'expiration"/>
    <TextField fx:id="txtSolde" promptText="Solde initial"/>

    <HBox spacing="10">
        <Button text="Ajouter" fx:id="btnAjouter" onAction="#ajouterCarteBancaire"/>
    </HBox>
</VBox>